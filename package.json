{
  "name": "icrowdtask",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": "6.14.8",
    "node": "12.18.3"
  },
  "main": "server.js",
  "dependencies": {
    "mongoose": "^5.10.0",
    "multiparty": "^4.2.2",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "passport-local-mongoose": "^6.0.1",
    "path": "^0.12.7",
    "sendgrid": "^5.2.3",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dot-env": "0.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "http-proxy-middleware": "^1.0.5",
    "webpack-dev-server": "^3.11.0",
    "@sendgrid/client": "^7.2.4",
    "@sendgrid/mail": "^7.2.4",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "scripts": {
    "start": "node server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix icrowdtask && npm run build --prefix icrowdtask",
    "client": "cd icrowdtask && yarn start",
    "server": "nodemon --inspect server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aldonald/iCrowdTask.git"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
