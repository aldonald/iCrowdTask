{
  "name": "icrowdtask",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": "6.14.8",
    "node": "12.18.3"
  },
  "main": "server.js",
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "scripts": {
    "start": "node server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix icrowdtask && npm run build --prefix icrowdtask",
    "client": "cd icrowdtask && yarn start",
    "server": "nodemon --inspect server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aldonald/iCrowdTask.git"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
